    "version": "0.2.0",
    "configurations": [
        {
            "name": "Benchmark",
            "type": "debugpy",
            "request": "launch",
            "program": "src/benchmark.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                // "hydra.run.dir=outputs/baseline-gpt-4.1"
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            // set current working directory to the workspace folder
            // set the environment variables from the .env file
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}